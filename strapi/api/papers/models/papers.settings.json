{
  "kind": "collectionType",
  "collectionName": "papers",
  "info": {
    "name": "Papers",
    "description": "Research papers and publications"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "string",
      "unique": true,
      "required": true,
      "maxLength": 64,
      "minLength": 4
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 64,
      "minLength": 4
    },
    "desc": {
      "type": "string",
      "required": true
    },
    "publish": {
      "type": "date",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "attachment.link"
    },
    "files": {
      "type": "component",
      "repeatable": true,
      "component": "attachment.file"
    },
    "authors": {
      "collection": "members"
    },
    "tags": {
      "collection": "tags"
    }
  }
}
