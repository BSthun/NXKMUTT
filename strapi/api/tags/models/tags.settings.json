{
  "kind": "collectionType",
  "collectionName": "tags",
  "info": {
    "name": "Tags",
    "description": "Content tags, categorized as technique and theme."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 64,
      "minLength": 1,
      "regex": "^[a-z0-9_-]*$"
    },
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 64,
      "minLength": 1
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "type",
        "technique",
        "theme"
      ],
      "required": true
    }
  }
}
