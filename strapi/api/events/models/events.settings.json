{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "Events",
    "description": "Event schedule and its content."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "string",
      "unique": true,
      "pluginOptions": {},
      "required": true,
      "maxLength": 64,
      "minLength": 4,
      "regex": "^[a-z0-9_-]*$"
    },
    "type": {
      "pluginOptions": {},
      "type": "enumeration",
      "enum": [
        "conference",
        "seminar",
        "meeting"
      ],
      "required": true
    },
    "multidays": {
      "pluginOptions": {},
      "type": "boolean",
      "default": false,
      "required": true
    },
    "date_start": {
      "pluginOptions": {},
      "type": "datetime",
      "required": true
    },
    "date_end": {
      "pluginOptions": {},
      "type": "datetime",
      "required": true
    },
    "name_en": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "maxLength": 64,
      "minLength": 4
    },
    "name_th": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "maxLength": 64,
      "minLength": 4
    },
    "desc_en": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "maxLength": 512,
      "minLength": 4
    },
    "desc_th": {
      "pluginOptions": {},
      "type": "string",
      "required": true
    },
    "content": {
      "pluginOptions": {},
      "type": "richtext",
      "required": true
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "pluginOptions": {},
      "component": "attachment.link"
    },
    "organizers": {
      "collection": "members"
    }
  }
}
