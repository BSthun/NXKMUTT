{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "Blogs",
    "description": "Blog post and its contents."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "pluginOptions": {},
      "type": "string",
      "unique": true,
      "regex": "^[a-z0-9_-]*$",
      "required": true,
      "minLength": 4,
      "maxLength": 64
    },
    "title_en": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "maxLength": 64,
      "minLength": 4
    },
    "title_th": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "minLength": 4,
      "maxLength": 64
    },
    "desc_en": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "maxLength": 512,
      "minLength": 4
    },
    "desc_th": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "maxLength": 512,
      "minLength": 4
    },
    "type": {
      "pluginOptions": {},
      "type": "enumeration",
      "enum": [
        "blog",
        "news"
      ],
      "required": true,
      "default": "blog"
    },
    "publish": {
      "pluginOptions": {},
      "type": "date",
      "required": true
    },
    "banner": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "content": {
      "pluginOptions": {},
      "type": "richtext",
      "required": true
    },
    "author": {
      "model": "members"
    },
    "tags": {
      "collection": "tags"
    }
  }
}
